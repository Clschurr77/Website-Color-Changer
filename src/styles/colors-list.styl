$color-th = 30px

ul.colors-list
	padding: 0
	margin: 0
	list-style: none
	li
		cursor: pointer
		display: block
		height: 30px
		
		&:nth-child(even)
			background-color: rgba(127, 127, 127, 0.1)
		
		i
			display: inline-block
			width: $color-th
			height: $color-th
			
			&.new-color
				float: right
			
		span
			margin-left: 15px
			line-height: $color-th
			vertical-align: top
		
		&:hover
			background-color: rgba(200, 200, 200, 0.1)