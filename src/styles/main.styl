@import "colors-list.styl"

$tab-border-color = rgba(127, 127, 127, 0.8)

html, body
	margin: 0
	padding: 0

div#tabs-container
	position: fixed
	top: 0
	left: 0
	right: 0
	z-index: 100
	
	ul
		background-color: #E2E2E2
		display: inline-block
		list-style: none
		padding: 3px
		margin: 0
		padding-left:8px
		height: 20px
		width: 100%
		border-bottom: 1px solid $tab-border-color
		
		> li
			display: table-cell
			text-transform: capitalize
			line-height: 22px
			margin-top: 3px
			padding: 0 10px
			cursor: pointer
			
			&:hover
				background-color: rgba(0,0,0,0.1)
			
			&.selected
				border: 1px solid $tab-border-color
				border-bottom-color: white
				background-color: white


div#content
	margin-top: 27px
	padding: 8px

@media (max-width: 425px)
	div#content

		div#color-picker-container
			display: inline-block
			width: 100%
			text-align: center
			margin-bottom: 10px
			
			& > div
				display: inline-block !important
			
@media (min-width: 426px)
	div#content		
		div#colors-list-container
			margin-right: 234px

		div#color-picker-container
			position: fixed
			right: 8px
			top: 35px
